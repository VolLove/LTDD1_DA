<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primal"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Home"
        android:textColor="@color/primal_red"
        android:textSize="100dp" />

    <Button
        android:id="@+id/homebntParcels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttondesignerror"
        android:text="Danh sách bưu phẩm"
        android:textSize="16dp" />

    <Button
        android:id="@+id/homebntTypeParcels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttondesign2"
        android:text="Danh sách loai bưu phẩm"
        android:textSize="16dp" />


    <Button
        android:id="@+id/homebntClose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttondesign1"
        android:text="Thoát"
        android:textSize="16dp" />
</LinearLayout>