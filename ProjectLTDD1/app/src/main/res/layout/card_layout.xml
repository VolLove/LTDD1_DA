<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_custom"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primal_pink"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/primal_pink"
            android:padding="10dp"
            android:paddingStart="20dp"

            android:src="@drawable/img" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:background="@color/primal_pink"
                android:text="Đơn hàng "
                android:textSize="20dp"
                android:textStyle="bold"
                tools:ignore="TextSizeCheck" />

            <TextView
                android:id="@+id/cardTvNameItem"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:background="@color/primal_pink"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:ignore="TextSizeCheck" />
        </LinearLayout>

        <Button
            android:id="@+id/cardBtnMore"
            android:layout_width="110dp"
            android:layout_height="38dp"
            android:layout_gravity="center_vertical|right"
            android:background="@drawable/buttondesign2"
            android:backgroundTint="@color/white"
            android:text="Xem thêm"
            android:textColor="@color/black"
            android:textSize="13dp"

            tools:ignore="TextSizeCheck" />
    </LinearLayout>

    <TextView
        android:id="@+id/cardTvStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tình trạng: "
        android:textColor="#000000"
        android:textSize="20dp"
        tools:ignore="TextSizeCheck" />
    <TextView
        android:id="@+id/cardTvNameTrans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#000000"
        android:text="Người chuyển:"/>

    <TextView
        android:id="@+id/cardTbNameGet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#000000"
        android:text="Người nhận: "/>

    <TextView
        android:id="@+id/cardTvDateGet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#000000"
        android:text="Ngày nhập: "/>

    <TextView
        android:id="@+id/cardTvdateTrans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#000000"
        android:text="Ngày gửi: "/>
</LinearLayout>