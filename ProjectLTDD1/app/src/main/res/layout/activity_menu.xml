<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primal"
    android:orientation="vertical"
    tools:context=".MenuActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text="Menu"
        android:textSize="30dp" />

    <Button
        android:id="@+id/menuBtnKho"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttondesign1"
        android:backgroundTint="@color/white"
        android:drawableEnd="@drawable/img"
        android:drawablePadding="50dp"
        android:gravity="start|center"
        android:paddingEnd="30dp"
        android:text="Kho"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <Button
        android:id="@+id/menuBtnSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttondesign3"
        android:drawableLeft="@drawable/img_1"
        android:drawablePadding="50dp"
        android:gravity="start|center"
        android:padding="5dp"
        android:paddingEnd="30dp"
        android:text="Tìm đơn"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <Button
        android:id="@+id/menuBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttondesign1"
        android:drawableLeft="@drawable/img_2"
        android:drawablePadding="50dp"
        android:gravity="start|center"
        android:paddingEnd="30dp"
        android:text="Thống kẽ"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <Button
        android:id="@+id/menuBtnAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttondesign3"
        android:drawableLeft="@drawable/img_5"
        android:drawablePadding="50dp"
        android:gravity="start|center"
        android:padding="5dp"
        android:paddingEnd="30dp"
        android:text="Tài khoản"
        android:textColor="@color/black"
        android:textSize="20dp" />
    <Button
        android:id="@+id/menuBtnlogOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttondesign1"
        android:drawableLeft="@drawable/img_3"
        android:drawablePadding="50dp"
        android:gravity="start|center"
        android:paddingEnd="30dp"
        android:text="Đăng xuất"
        android:textColor="@color/black"
        android:textSize="20dp" />
</LinearLayout>