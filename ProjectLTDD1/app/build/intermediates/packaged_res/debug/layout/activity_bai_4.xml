<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Bai4Activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E91E63"
        android:gravity="center"
        android:text="Nhom"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#256728"
        android:gravity="center"
        android:text="Bé thực hành phép tính"
        android:textColor="#FFFFFF"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/bai4edtNum1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập số 1"
        android:inputType="number"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/bai4edtNum2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập số 2"
        android:inputType="number"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/bai4edtResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập kết quả"
        android:inputType="number"
        android:textSize="25dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bai4btnCong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cộng"
            android:layout_marginHorizontal="5dp"
            android:textSize="20dp"
            android:drawableBottom="@drawable/baseline_add_24"
            />
        <Button
            android:id="@+id/bai4btnTru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trừ"
            android:layout_marginHorizontal="5dp"
            android:textSize="20dp"
            android:drawableBottom="@drawable/baseline_remove_24"
            />
        <Button
            android:id="@+id/bai4btnNhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhân"
            android:layout_marginHorizontal="5dp"
            android:textSize="20dp"
            android:drawableBottom="@drawable/baseline_close_24"
            />
        <Button
            android:id="@+id/bai4btnChia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chia"
            android:layout_marginHorizontal="5dp"
            android:textSize="20dp"
            android:drawableBottom="@drawable/baseline_raw_off_24"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/bai4tvKetQua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>